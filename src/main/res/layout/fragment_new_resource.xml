<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewResourceFragment"
    android:background="@color/orange_bright_more">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/resource_title"
                android:background="@drawable/bg_login"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint=" Resource title"
                android:gravity="top"
                />
            <EditText
                android:id="@+id/resource_content"
                android:background="@drawable/bg_login"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:hint=" Resource content"
                android:gravity="top"
                />
            <Button
                android:id="@+id/btn_upload"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="upload your file"
                android:textSize="17sp"
                android:backgroundTint="@color/orange_dark"
                />
            <EditText
                android:id="@+id/resource_attachment"
                android:background="@drawable/bg_login"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint=" Copy your file link here"
                android:gravity="top"
                />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_create"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:backgroundTint="@color/blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Create resource section"
        android:textSize="17sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>