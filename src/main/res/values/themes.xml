<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Cvt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/orange_bright</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue_bright</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/orange_dark</item>
    </style>

    <style name="Theme.Cvt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cvt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Cvt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>